$(function () {
    $("#tab_resumen_licencia").click(function(){

        $('#botones_licencia').hide();

        $('#boton_facturar_licencia').show();
        $('#boton_cancelar_facturar_licencia').show();

    });

    $("#tab_cliente_licencia").click(function(){

        $('#botones_licencia').show();
        $('#boton_limpiar_licencia').hide();
        $('#boton_calcular_licencia').hide();
        $('#boton_cancelar_licencia').show();

        $('#boton_facturar_licencia').hide();
        $('#boton_cancelar_facturar_licencia').hide();



    });

    $("#tab_liquidacion_licencia").click(function(){

        $('#botones_licencia').show();
        $('#boton_limpiar_licencia').show();
        $('#boton_cancelar_licencia').hide();
        $('#boton_calcular_licencia').show();

        $('#boton_cancelar_facturar_licencia').hide();
        $('#boton_facturar_licencia').hide();




    });


});